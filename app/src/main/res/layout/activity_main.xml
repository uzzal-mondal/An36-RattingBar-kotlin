<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RatingBar

            android:numStars="6"
            android:rating="3"
            android:stepSize="1"
            android:progressBackgroundTint="#FF5722"
            android:progressTint="#3AB78B"


            android:layout_width="282dp"
            android:layout_height="54dp"
            android:id="@+id/ratingBarid"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="43dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonid"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp" android:layout_marginEnd="27dp"/>

    <TextView
            android:text="@string/Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewid"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/buttonid"
            android:layout_marginBottom="332dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonid"
            app:layout_constraintStart_toStartOf="@+id/buttonid"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Submit"
            android:layout_width="281dp"
            android:layout_height="69dp"
            android:id="@+id/buttonid"
            app:layout_constraintTop_toBottomOf="@+id/ratingBarid" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
    />

</android.support.constraint.ConstraintLayout>